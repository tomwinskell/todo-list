<%- include('header'); -%>
<div style="background-color: none;">
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    <div class="box">
        
            <% for (let index = 0; index < listItemsArray.length; index++) { %>
                <div class="item">
                    <input type="checkbox">
                    <p> <%=listItemsArray[index]%> </p>
                </div>
            <% } %>

            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="New list item" autocomplete="off">
                <button type="submit" name="list" value="<%= listTitle %>">+</button>
            </form>

    </div>
</div>
    
    <%- include('footer'); -%>